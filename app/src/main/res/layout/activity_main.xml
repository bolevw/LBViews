<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.lbviews.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/title_home"
                android:visibility="gone" />

            <com.test.lbviews.views.StepViews
                android:id="@+id/stepView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#000" />

            <com.test.lbviews.views.ImageStepViews
                android:id="@+id/step"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#ff88ff"
                app:currentStep="4"
                app:orientation="horizontal" />

            <com.test.lbviews.views.MovePath
                android:id="@+id/move"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="right" />

            <com.test.lbviews.views.SpiderView
                android:layout_width="300dp"
                android:layout_height="300dp" />

            <com.test.lbviews.views.CanvasOperation
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <com.test.lbviews.views.ProgressView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin" />

            <com.test.lbviews.views.path.BasePathView
                android:layout_width="400dp"
                android:layout_height="200dp" />


        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</LinearLayout>
